<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100,format: 'jpeg', fallback: "no_image.jpg" %>

     <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th>
              <%= link_to user_followings_path(@user.id) do %>
               <%= @user.followings.count %>
              <% end %>
            </th>
          </tr>
          <tr>
            <th>followers</th>
            <th>
              <%= link_to user_followers_path(@user.id) do %>
              <%= @user.followers.count %>
              <% end %>
            </th>
          </tr>

      <th>
         <% unless @user == current_user %>
          <% if current_user.following?(@user) %>
            <%= link_to 'unfollow', user_relationships_path(@user.id), method: :delete, class:"btn btn-secondary" %>
          <% else %>
            <%= link_to 'follow', user_relationships_path(@user.id), method: :POST, class:"btn btn-primary" %>
          <% end %>
         <% end %>
      </th>
      </tbody>
      </table>
      <div class="row">
        <%= link_to "",edit_user_path(@user),class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:@new, url:books_path, local:true do |f| %>
       <div class="form-group">
         <lavel for="title">Title</lavel>
         <%= f.text_field :title, class:"form-control book_title" %>
       </div>

        <div class="form-group">
         <lavel for="body">Opinion</lavel>
         <%= f.text_area :body, class:"form-control book_body" %>
       </div>
       <div class="actions">
         <%= f.submit 'Create Book',class:"btn btn-success" %>
       </div>
       <% end %>
       </div>
      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-striped">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill,40,40,fallback:"no_image.jpg",size: "40x40"%><br>
              <%= link_to @book.user.name,user_path(@book.user_id)%>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title,book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <% if @book.favorited_by?(current_user)%>
                 <%= link_to book_favorites_path(@book),method: :delete do %>
                 ♥<%= @book.favorites.count %> いいね
                <% end %>

                <% else %>

                  <%= link_to book_favorites_path(@book),method: :post do %>
                   ♡<%= @book.favorites.count %> いいね
                  <% end %>

                <% end %>
            </td>
            <td>
              <p>コメント数:<%= @book.book_comments.count %></p>
            </td>
            <% if @book.user==current_user %>
             <td><%= link_to "Edit", edit_book_path(@book.id),class:"btn btn-success"%></td>
             <td><%= link_to "Destroy",book_path(@book.id),method: :delete ,"data-confirm" => "Are you sure?",class:"btn btn-danger"%></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <table>
      <% @book.book_comments.each do |book_comment| %>
        <tr>
          <td>
            <%= link_to user_path(book_comment.user), class: "user_#{book_comment.user.id}" do %>
              <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
              <%= book_comment.user.name %>
            <% end %>
          </td>
          <td><%= book_comment.comment %></td>
          <% if current_user == book_comment.user %>
            <td><%= link_to "Destroy", book_book_comment_path(@book,book_comment.id), class: 'btn-sm btn-danger', method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <div class="comment-form">
      <%= form_with(model:[@book, @book_comment],local: true) do |f| %>
        <%= f.text_area :comment, rows:"5",class: "form-control",placeholder: "コメントをここに" %>
        <%= f.submit '送信' %>
      <% end %>
       </div>
     </div>

   </div>
 </div>