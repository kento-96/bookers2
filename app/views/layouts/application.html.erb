<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <a class="navbar-brand" href="/">
           <span>Bookers</span>
         </a>
         <button class="navbar-toggler" type="button" date-toggle="collapse" date-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
          </button>
         <div class="navbar-collapse collapse " id="navbarNavDropdown"></div>
         <ul class="naver-nav ml-auto">
          <% if user_signed_in? %>

             <%= link_to "Home", user_path(current_user.id), class:"fas fa-home nav-link text-light" %>

              <%= link_to "Users", users_path, class:"fas fa-users nav-link text-light" %>

              <%= link_to "Books", books_path, class:"fas fa-book-open nav-link text-light" %>

              <%= link_to "logout", destroy_user_session_path, method: :delete, class:"fas fa-sgin-out-alt nav-link text-light" %>

          <% else %>

              <%= link_to "Home", root_path, class:"fas fa-home nav-link text-light"%>

              <%= link_to "About", home_about_path, class:"fas fa-link nav-link text-light" %>

              <%= link_to "sign up", new_user_registration_path, class:"fas fa-user-plus nav-link text-light" %>

              <%= link_to "login", new_user_session_path, class:"fas fa-sgin-in-alt nav-link text-light" %>

            <% end %>
          </ul>
        </div>
       </nav>
      </header>

    <%= yield %>
  </body>
</html>
