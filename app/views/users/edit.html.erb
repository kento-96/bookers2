<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <% if @user.errors.any? %>
      <div class="error_explanation">
       <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
       <ul>
        <% @user.errors.full_messages.each do |message| %>
         <li> <%= message %> </li>
        <% end %>
       </ul>
      </div>
      <% end %>


      <h1>User info</h1>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
         <lavel for="title">Name</lavel>
         <%= f.text_field :name, class:"form-control book_title" %>
       </div>

        <div class="form-group">
         <lavel for="body">Image</lavel>
         <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
       </div>

        <div class="form-group">
         <lavel for="body">Inroduction</lavel>
         <%= f.text_area :introduction, class:"form-control book_body" %>
       </div>
       <div class="actions">
         <%= f.submit 'Update User',class:"btn btn-success" %>
       </div>
       <% end %>
    </div>
  </div>
</div>